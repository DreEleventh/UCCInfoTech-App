<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200">

   <ImageView
      android:id="@+id/ucc_crest_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_ucc_crest"
       android:adjustViewBounds="true"
       android:importantForAccessibility="no"
       android:maxWidth="40pt"
       android:maxHeight="40pt"
      android:padding="5dp"/>

   <TextView
       android:id="@+id/ucc_text_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="UCC IT App"
       android:textSize="20sp"
       android:textStyle="bold"
       android:textColor="@color/white"
       android:paddingStart="5dp"
       app:layout_constraintStart_toStartOf="@id/ucc_crest_id"
       app:layout_constraintTop_toBottomOf="@id/ucc_crest_id"
       tools:ignore="RtlSymmetry" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Student Name: student@ucc.edu.jm"
       android:textSize="15sp"
       android:textColor="@color/white"
       android:paddingStart="5dp"
       app:layout_constraintStart_toStartOf="@id/ucc_text_id"
       app:layout_constraintTop_toBottomOf="@id/ucc_text_id"
       tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>